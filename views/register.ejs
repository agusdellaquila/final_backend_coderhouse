    <div class="bg-stone-400 m-5 p-5">    
        <form id="register" action="/register" method="POST">
            <div class="flex-col">
                <p>Username/Email:</p> <input id="user" type="text" name="user">
                <p>Password:</p> <input id="password" type="text" name="password">
            </div>
    
            <input class="bg-gray-500 p-2 mt-6" type="submit" value="Register">
        </form>
    </div>
</body>
</html>